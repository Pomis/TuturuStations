<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_details"

    tools:context="pomis.app.tuturustations.fragments.DetailsFragment">

    <TextView
        android:id="@+id/tv_country_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Название страны"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tv_city_region"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_country_title"
        android:layout_alignStart="@+id/tv_country_title"
        android:layout_below="@+id/tv_country_title"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="Регион, Город"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/tv_full_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_city_region"
        android:layout_alignStart="@id/tv_city_region"
        android:layout_below="@id/tv_city_region"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="Адрес"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="19sp" />

</RelativeLayout>
